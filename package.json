{
  "name": "statusbartime",
  "displayName": "statusbartime",
  "description": "",
  "version": "1.0.0",
  "publisher": "givenby",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/givenby/statusbartime.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "statusBarTime.visibilityToggle",
        "title": "Toggle (Hide/Show) Status Bar Time"
      },
      {
        "command": "statusBarTime.reset",
        "title": "Reset Time"
      }
    ],
    "configuration": {
      "title": "Status Bar Time",
      "properties": {
        "statusBarTime.visibility": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar coding time"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
